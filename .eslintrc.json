{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "simple-import-sort",
    "sort-keys-fix",
    "sort-destructure-keys"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "simple-import-sort/imports": 2,
    "simple-import-sort/exports": 2,
    "sort-destructure-keys/sort-destructure-keys": 2,
    "sort-keys-fix/sort-keys-fix": 2
  },
  "prettier/prettier": [
    "error",
    {
      "endOfLine": "auto"
    }
  ],

  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
